<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>

	<Type unid="&unidCoreCriteria;">
		<AttributeDesc>
			<!-- Fuel Criteria -->

			<ItemAttribute id="core.fusionFuel"		label="fusion fuel"			criteriaLabel="fusion fuels"			criteria="f L:1-4;"/>
			<ItemAttribute id="core.antimatterFuel"	label="antimatter fuel"		criteriaLabel="antimatter fuels"		criteria="f L:5-8;"/>
			<ItemAttribute id="core.zeroPointFuel"	label="zero-point fuel"		criteriaLabel="zero-point fuel"			criteria="f L:9-12;"/>
			<ItemAttribute id="core.preonicFuel"	label="preonic fuel"		criteriaLabel="preonic fuels"			criteria="f L:13-16;"/>
			<ItemAttribute id="core.graviticFuel"	label="gravitic fuel"		criteriaLabel="gravitic fuels"			criteria="f L:17-20;"/>
			<ItemAttribute id="core.darkMatterFuel"	label="dark matter fuel"	criteriaLabel="dark matter fuels"		criteria="f L:21-25;"/>

			<!-- Misc Criteria -->

			<ItemAttribute id="core.ore"			label="ore"					criteriaLabel="ores"					criteria="* +ore; -illegal;"/>
		</AttributeDesc>
	</Type>

	<!-- Generic Enhancement -->

	<ItemType UNID="&vtGenericEnhancement;"
			name=				"enhancement"
			virtual=			"true"
			level=				"1"
			>
		<Image imageID="&rsItems1;" imageX="288" imageY="768" imageWidth="96" imageHeight="96"/>

		<Language>
			<!-- These values are used by intItemEnhanceStatus. -->

			<Text id="itemEnhanceResult.alreadyEnhanced">%ItemName% is already enhanced</Text>
			<Text id="itemEnhanceResult.damaged"></Text>
			<Text id="itemEnhanceResult.defectRemoved">%ItemName% has been repaired</Text>
			<Text id="itemEnhanceResult.defectReplaced"></Text>
			<Text id="itemEnhanceResult.degraded">%ItemName% has weakened further</Text>
			<Text id="itemEnhanceResult.enhancementRemoved">%ItemName% has lost its enhancement</Text>
			<Text id="itemEnhanceResult.enhancementReplaced">(previous enhancement lost)</Text>
			<Text id="itemEnhanceResult.improved">%ItemName% has been further enhanced</Text>
			<Text id="itemEnhanceResult.noEffect">The enhancement has no effect</Text>
			<Text id="itemEnhanceResult.repaired"></Text>
		</Language>
	</ItemType>

</TranscendenceModule>
	
