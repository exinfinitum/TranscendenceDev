<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>

<!-- SHIP CLASSES -->

	<!-- Level 1: TA3 Sentinel -->

	<ShipClass UNID="&scTenhoveSentinel;"
			manufacturer=		"Tenhove Defense Systems"
			class=				"TA3"
			type=				"sentinel"
			defaultSovereign=	"&svCommonwealth;"

			attributes=			"auton, combatAuton, genericClass, tenhoveDefense"
			>

		<Properties>
			<Definition id="core.noBiologicalEffects">True</Definition>
			<Definition id="core.noRadiationDeath">True</Definition>
		</Properties>

		<!-- Hull -->

		<Hull
			size=				"13"
			mass=				"2"
			cargoSpace=			"0"

			maxReactorPower=	"100"
			maxCargoSpace=		"0"
			maxDevices=			"1"

			maxArmor=			"light"
			stdArmor=			"light"
			/>

		<Reactor
			reactorPower=		"30"
			/>

		<Drive
			maxSpeed=			"5"
			thrust=				"30"
			/>

		<Maneuver
			maxRotationRate=	"18.0"
			rotationAccel=		"9.0"
			/>

		<!-- Configuration -->

		<Armor
			armorID=			"&itUltraLightTitaniumArmor;"
			count=				"1"
			/>

		<Devices>
			<Device deviceID="&itRecoillessCannon;"	posAngle="0" posRadius="18" posZ="15"/>
		</Devices>

		<!-- Image and Effects -->

		<Image imageID="&rsTA3Sentinel;" imageWidth="48" imageHeight="48" rotationCount="120" rotationColumns="12" viewportRatio="0.005625"/>
		<HeroImage imageID="&rsTA3SentinelHero;" imageWidth="320" imageHeight="320"/>

		<!-- AI and Behavior -->

		<AISettings
			fireRateAdj=		"50"
			fireAccuracy=		"80"
			perception=			"4"
			/>

	</ShipClass>

